<window id="createClientWin" border="normal" width="400px"
	apply="com.payulatam.controller.client.CreateClientController">

	<include src="/template/menu.zul" />

	<label style="font-weight: bold;">Crear Cliente</label>

	<vlayout>
		<label id="messageLabel" />
		<hlayout>
			<label>Nombre:</label>
			<textbox id="clientNameTextBox" />
		</hlayout>
		<hlayout>
			<label>Dirección:</label>
			<textbox id="clientAddressTextBox" />
		</hlayout>
		<hlayout>
			<label>Teléfono:</label>
			<textbox id="clientTelephoneTextBox" />
		</hlayout>
		<hlayout>
			<button id="createClientButton">Crear</button>
			<button id="cancelCreateClientButton">Cancelar</button>
		</hlayout>
	</vlayout>

</window>